#!/bin/bash
driverUrl='https://www.exasol.com/support/secure/attachment/65437/EXASOL_ODBC-6.0.11.tar.gz'
md5Url='https://www.exasol.com/support/secure/attachment/65438/EXASOL_ODBC-6.0.11.tar.gz.md5'
driverName="$(cut -d '/' -f8 <<< "$driverUrl")"
md5Name="$(cut -d '/' -f8 <<< "$md5Url")"
oldPwd="$PWD"

if [ ! -d "/opt/exasol/EXASOL_ODBC-6.0.11" ]; then
    echo "downloading and installing EXASOL ODBC driver..."
    cd "/opt/exasol" &&
    wget -nv "$driverUrl" &&
    wget -nv "$md5Url"  &&
    md5sum -c "$md5Name" &&
    tar --no-same-owner -xf "$driverName" &&
    rm -f "$driverName" "$md5Name" 
    cd "$PWD"
fi;
