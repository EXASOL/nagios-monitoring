#!/bin/bash
oldpwd=$PWD
apt-get install -yq rrdtool librrds-perl librrdp-perl && \
mkdir -p "/usr/src/pnp4nagios" && \
cd "/usr/src" && \
git clone "https://github.com/lingej/pnp4nagios" && \
cd "/usr/src/pnp4nagios" && \
./configure --prefix=/opt/pnp4nagios && \
make all && \
make install && \
make install-config
cd $PWD
